<div class="container mt-5">
  <h2 class="text-center mb-4">ðŸ›’ Your Cart</h2>

  {{#if items.length}}
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
        <tr>
          <td>{{this.productId.name}}</td>
          <td>{{this.quantity}}</td>
          <td>â‚ª{{this.productId.price}}</td>
          <td>â‚ª{{multiply this.quantity this.productId.price}}</td>
          <td>
            <form method="POST" action="/cart/remove/{{this.productId._id}}">
              <button class="btn btn-danger btn-sm">Remove</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <div class="text-right">
      <h4>Total: â‚ª{{totalPrice}}</h4>

      <form method="POST" action="/cart/clear" class="d-inline">
        <button class="btn btn-warning">Clear Cart</button>
      </form>

      <form method="POST" action="/orders/create" class="d-inline">
        <button class="btn btn-success">Checkout</button>
      </form>
    </div>
  {{else}}
    <div class="alert alert-info text-center">Your cart is empty.</div>
  {{/if}}
</div>

<style>
  table {
    background-color: #fff;
  }
  th, td {
    vertical-align: middle;
  }
  .btn {
    margin: 2px;
  }
</style>
