<h1 class="mb-4">{{title}}</h1>

{{#if orders.length}}
  {{#each orders}}
    <div class="card mb-3 shadow">
      <div class="card-header">
        <strong>Order #{{@index}}</strong> | Total: ₪{{totalAmount}} | 
        Paid: {{#if isPaid}}<span class="text-success">✅ Yes</span>{{else}}<span class="text-danger">❌ No</span>{{/if}}
      </div>
      <div class="card-body">
        <ul class="list-group">
          {{#each items}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
              {{this.productId.name}} 
              <span>Quantity: {{this.quantity}}</span>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>No orders found.</p>
{{/if}}
